extend ../index/main

block content
	.data_ways(style="display: none") #{data_ways}
	.data_types(style="display: none") #{data_types}
	.container
		.row(style="margin-top:10px")
			.col-md-9
				#highcharts_way
		.row(style="height:2px; background: black; margin-top: 30px; margin-left: 100px; width: 600px")
		.row(style="margin-top: 30px; padding-buttom: 50px")
			.col-md-9
				#highcharts_type
	script(type='text/javascript').
		window.onload = function(){
			$('.bill_statistic').css("color", "black");

			//获取消费方式和消费用途数据
			let data_ways = $('.data_ways').text().split(',');
			let data_types = $('.data_types').text().split(',');

			//语言设置
			Highcharts.setOptions({
				lang:{
					contextButtonTitle:"图表导出菜单",
					decimalPoint:".",
					downloadJPEG:"下载JPEG图片",
					downloadPDF:"下载PDF文件",
					downloadPNG:"下载PNG文件",
					downloadSVG:"下载SVG文件",
					drillUpText:"返回 {series.name}",
					loading:"加载中",
					months:["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"],
					noData:"没有数据",
					numericSymbols: [ "千" , "兆" , "G" , "T" , "P" , "E"],
					printChart:"打印图表",
					resetZoom:"恢复缩放",
					resetZoomTitle:"恢复图表",
					shortMonths: [ "Jan" , "Feb" , "Mar" , "Apr" , "May" , "Jun" , "Jul" , "Aug" , "Sep" , "Oct" , "Nov" , "Dec"],
					thousandsSep:",",
					weekdays: ["星期一", "星期二", "星期三", "星期三", "星期四", "星期五", "星期六","星期天"]
				}
			});

			//消费方式图表
			$('#highcharts_way').highcharts({
				chart: {
					plotBackgroundColor: null,
					plotBorderWidth: null,
					plotShadow: false
				},
				title: {
						text: '消费方式比例分析图'
				},
				plotOptions: {
					pie: {
						allowPointSelect: true,
						cursor: 'pointer',
						dataLabels: {
							enabled: true,
							format: '<b>{point.name}</b>: {point.percentage:.1f} %',
							style: {
								color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
							}
						}	 	
					}
				},
				series: [{
					type: 'pie',
					name: '消费方式',
					data: [
						['天猫超市', data_ways[0]*1 + 0],
						['京东超市', data_ways[1]*1 + 0],
						['淘宝天猫', data_ways[2]*1 + 0],
						['京东商城', data_ways[3]*1 + 0],
						['当当网', data_ways[4]*1 + 0],
						['亚马逊', data_ways[5]*1 + 0],
						['现金', data_ways[6]*1 + 0],
						['唯品会', data_ways[7]*1 + 0],
						['其它',  data_ways[8]*1 + 0]
					]
				}]
			});

			 //消费用途图表
			 $('#highcharts_type').highcharts({
			 	chart: {
			 		plotBackgroundColor: null,
			 		plotBorderWidth: null,
			 		plotShadow: false
			 	},
			 	title: {
			 			text: '消费用途比例分析图'
			 	},
			 	plotOptions: {
			 		pie: {
			 			allowPointSelect: true,
			 			cursor: 'pointer',
			 			dataLabels: {
			 				enabled: true,
			 				format: '<b>{point.name}</b>: {point.percentage:.1f} %',
			 				style: {
			 					color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
			 				}
			 			}	 	
			 		}
			 	},
			 	series: [{
			 		type: 'pie',
			 		name: '消费用途',
			 		data: [
			 			['生活用品', data_types[0]*1 + 0],
			 			['学习书籍', data_types[1]*1 + 0],
			 			['电子产品', data_types[2]*1 + 0],
			 			['公交地铁打车', data_types[3]*1 + 0],
			 			['饭卡充值', data_types[4]*1 + 0],
			 			['餐饮', data_types[5]*1 + 0],
			 			['礼品赠品', data_types[6]*1 + 0],
			 			['其它', data_types[7]*1 + 0]
			 		]
			 	}]
			  });
		}